<%= simple_form_for @job do |f|%>

<% if @job.errors.any? %>

	<div id="errors">
		<%= @job.errors.count %> prevented this from saving.
	</div>

	<ul>
		<% @job.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>

<% end %>

<div class="panel-body">
	<%= f.input :client_id, collection: Client.where(user_id: current_user.id), input_html: {class: 'form-control'} %>
	<%= f.input :name, input_html: {class: 'form-control'} %>
	<%= f.input :info, input_html: {class: 'form-control'} %>
</div>
<%= f.button :submit, class: "btn btn-primary" %>
<% end %>